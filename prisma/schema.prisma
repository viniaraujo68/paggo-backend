generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // MongoDB connection string
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String     @unique
  password  String
  documents Document[] @relation("UserDocuments")
}

model Document {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  filename  String
  text      String
  image     Bytes
  summary   String?
  createdAt DateTime   @default(now())
  userId    String
  user      User       @relation(fields: [userId], references: [id], name: "UserDocuments")
  messages  Message[]  @relation("DocumentMessages")
}

model Message {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  content     String
  order       Int
  documentId  String
  sentAt      DateTime   @default(now())
  document    Document @relation(fields: [documentId], references: [id], name: "DocumentMessages")
}