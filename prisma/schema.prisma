generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // MongoDB connection string
}

model Document {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  filename  String
  text      String
  image     Bytes
  summary   String?
  createdAt DateTime @default(now())
}